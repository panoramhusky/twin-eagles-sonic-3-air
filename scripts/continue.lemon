				if (D0.s8 < 0)
				{
					// Time up
					u8[0xfffffaa9] = 2
				}
				else
				{
					u8[0xfffffa84] = D0.u8
					fn05caae()
				}
			}
		}
		return
	}

	
	base.fn05c4e6()
}

