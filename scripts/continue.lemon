				objA1.sprite_attributes = (objA0.sprite_attributes & ~sprite_attribute.PRIORITY) | (u16[A0 + 0x0a] & sprite_attribute.PRIORITY)
				u16[A1 + 0x10] = u16[A0 + 0x10]
				u16[A1 + 0x14] = u16[A0 + 0x14] + 0x0c
				u8[A1 + 0x20] = 0x03
				u8[A1 + 0x2a] = 0
